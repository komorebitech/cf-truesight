# ---- General ----
ENVIRONMENT=local
RUST_LOG=info,truesight=debug

# ---- Sentry ----
SENTRY_DSN=
SENTRY_ENVIRONMENT=local
SENTRY_TRACES_SAMPLE_RATE=1.0

# ---- Datadog ----
DD_AGENT_HOST=
DD_SERVICE=truesight
DD_ENV=local

# ---- Ingestion API ----
INGESTION_API_PORT=8080

# ---- Admin API ----
ADMIN_API_PORT=8081
ADMIN_API_TOKEN=local-dev-admin-token-change-in-prod
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ---- Dashboard ----
VITE_ADMIN_TOKEN=local-dev-admin-token-change-in-prod

# ---- AWS / SQS ----
AWS_REGION=us-east-1
SQS_QUEUE_URL=http://localhost:4566/000000000000/truesight-events-local
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
SQS_ENDPOINT_URL=http://localhost:4566

# ---- ClickHouse ----
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=truesight_local
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ---- CH Writer ----
CH_BATCH_SIZE=1000
CH_FLUSH_INTERVAL_SECS=5
SQS_RECEIVE_BATCH_SIZE=10

# ---- PostgreSQL 18 (Diesel) ----
DATABASE_URL=postgres://truesight:truesight_dev@localhost:5432/truesight
